---
// Componente minimalista para mostrar posts destacados
// Diseño moderno con hero principal y sidebar de noticias
import { getFeaturedPostsWithImages } from "../lib/wordpress";
import { getPostImage } from '../utils/getPostImage';

// Obtener posts con imágenes destacadas
const featuredPosts = await getFeaturedPostsWithImages();
---

<div class="minimal-featured">
  {featuredPosts.length > 0 ? (
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      {/* Post principal (izquierda) */}
      <div class="lg:col-span-8">
        <a href={`/${featuredPosts[0].slug}`} class="block relative w-full aspect-[4/5] sm:aspect-video lg:h-[600px] rounded-2xl overflow-hidden shadow-soft group cursor-pointer">
          <div
            class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
            style={`background-image: url('${getPostImage(featuredPosts[0]).url}');`}
          ></div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
          <div class="absolute bottom-0 left-0 p-5 sm:p-10 w-full max-w-4xl">
            {featuredPosts[0].categories?.nodes?.[0] && (
              <span class="inline-block px-3 py-1 mb-3 sm:mb-4 text-[10px] sm:text-xs font-bold text-white uppercase tracking-wider bg-primary rounded-md shadow-sm">
                {featuredPosts[0].categories.nodes[0].name}
              </span>
            )}
            <h2 class="text-2xl sm:text-4xl md:text-5xl font-bold text-white mb-3 sm:mb-4 leading-snug sm:leading-tight">
              {featuredPosts[0].title}
            </h2>
            <div class="flex items-center gap-3 text-gray-300 text-xs sm:text-sm font-medium">
              <span>{featuredPosts[0].author?.node?.name || 'Redacción'}</span>
              <span class="size-1 rounded-full bg-gray-400"></span>
              <span>{new Date(featuredPosts[0].date).toLocaleDateString('es-MX', { month: 'short', day: 'numeric' })}</span>
            </div>
          </div>
        </a>
      </div>

      {/* Posts secundarios (derecha, en columna) */}
      <div class="lg:col-span-4 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4 lg:hidden">
          <h3 class="text-lg font-bold text-slate-900 dark:text-white flex items-center gap-2">
            <span class="w-1 h-6 bg-primary rounded-full"></span>
            Noticias Destacadas
          </h3>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:flex lg:flex-col lg:h-full lg:justify-between gap-4 sm:gap-6">
          {featuredPosts.slice(1, 5).map((post) => (
            <article class="flex gap-4 group cursor-pointer items-start bg-white dark:bg-surface-dark/50 lg:bg-transparent lg:dark:bg-transparent p-3 lg:p-0 rounded-xl lg:rounded-none shadow-sm lg:shadow-none border border-gray-100 dark:border-gray-800 lg:border-none">
              <a href={`/${post.slug}`} class="w-20 h-20 sm:w-24 sm:h-24 rounded-lg bg-gray-200 shrink-0 bg-cover bg-center overflow-hidden block"
                 style={`background-image: url('${getPostImage(post).url}');`}>
              </a>
              <div class="flex flex-col gap-1">
                {post.categories?.nodes?.[0] && (
                  <span class="text-primary text-[10px] sm:text-xs font-bold uppercase">
                    {post.categories.nodes[0].name}
                  </span>
                )}
                <h4 class="text-sm sm:text-[15px] font-bold text-slate-900 dark:text-white leading-snug group-hover:text-primary transition-colors line-clamp-3">
                  <a href={`/${post.slug}`}>{post.title}</a>
                </h4>
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  ) : (
    <div class="flex items-center justify-center h-[300px] bg-gray-100 dark:bg-surface-dark rounded-xl">
      <div class="text-center p-8">
        <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-200 mb-2">No hay artículos destacados</h3>
        <p class="text-gray-600 dark:text-gray-300">Agrega imágenes destacadas a tus posts en WordPress para que aparezcan aquí.</p>
      </div>
    </div>
  )}
</div>
