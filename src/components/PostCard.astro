---
import { getPostImage } from '../utils/getPostImage';

interface Props {
  title: string;
  slug: string;
  excerpt: string;
  date: string;
  content?: string;
  featuredImage?: {
    sourceUrl: string;
    altText: string;
  };
  categories?: {
    name: string;
    slug: string;
  }[];
  layout?: 'default' | 'compact' | 'featured' | 'horizontal';
}

const {
  title,
  slug,
  excerpt,
  date,
  content = '',
  featuredImage,
  categories,
  layout = 'default'
} = Astro.props;

// Obtener la mejor imagen para este post
const postImage = getPostImage(
  {
    title,
    featuredImage: { node: featuredImage },
    content
  },
  '/placeholder-image.svg'
);

// Format date
const formattedDate = new Date(date).toLocaleDateString('es-MX', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

const shortDate = new Date(date).toLocaleDateString('es-MX', {
  month: 'short',
  day: 'numeric',
});
---

{layout === 'default' && (
  <article class="bg-white dark:bg-surface-dark rounded-2xl overflow-hidden shadow-card hover:shadow-lg transition-all duration-300 h-full flex flex-col group border border-gray-100 dark:border-transparent">
    <a href={`/${slug}`} class="block overflow-hidden aspect-[4/3] relative">
      <div
        class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110"
        style={`background-image: url('${postImage.url}');`}
      ></div>
      {categories && categories.length > 0 && (
        <div class="absolute top-3 left-3">
          <span class="bg-white/20 backdrop-blur-md border border-white/20 text-white text-[10px] font-bold px-2 py-1 rounded uppercase tracking-wide">
            {categories[0].name}
          </span>
        </div>
      )}
    </a>
    <div class="p-4 sm:p-5 flex flex-col flex-1">
      <span class="text-xs font-semibold text-slate-500 dark:text-gray-400 uppercase mb-2">
        {categories?.[0]?.name || 'General'}
      </span>
      <h2 class="text-lg font-bold text-slate-900 dark:text-white leading-tight mb-auto group-hover:text-primary transition-colors line-clamp-2">
        <a href={`/${slug}`}>{title}</a>
      </h2>
      <div class="flex items-center justify-between mt-4 text-xs text-slate-400">
        <span>Redacción</span>
        <span>{shortDate}</span>
      </div>
    </div>
  </article>
)}

{layout === 'compact' && (
  <article class="flex gap-4 group cursor-pointer items-start bg-white dark:bg-surface-dark/50 p-3 rounded-xl shadow-sm border border-gray-100 dark:border-gray-800">
    <a href={`/${slug}`} class="w-20 h-20 sm:w-24 sm:h-24 rounded-lg bg-gray-200 shrink-0 bg-cover bg-center overflow-hidden block"
       style={`background-image: url('${postImage.url}');`}>
    </a>
    <div class="flex flex-col gap-1">
      {categories && categories.length > 0 && (
        <span class="text-primary text-[10px] sm:text-xs font-bold uppercase">
          {categories[0].name}
        </span>
      )}
      <h3 class="text-sm sm:text-[15px] font-bold text-slate-900 dark:text-white leading-snug group-hover:text-primary transition-colors line-clamp-3">
        <a href={`/${slug}`}>{title}</a>
      </h3>
    </div>
  </article>
)}

{layout === 'horizontal' && (
  <article class="flex flex-col md:flex-row gap-4 sm:gap-6 bg-white dark:bg-surface-dark rounded-2xl p-4 md:p-6 shadow-card hover:shadow-lg transition-all duration-300 group border border-transparent hover:border-gray-100 dark:hover:border-gray-700">
    <div class="w-full md:w-64 h-48 sm:h-56 md:h-auto rounded-xl overflow-hidden shrink-0 relative">
      <a href={`/${slug}`} class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110 block"
         style={`background-image: url('${postImage.url}');`}>
      </a>
      {categories && categories.length > 0 && (
        <div class="absolute top-3 left-3 flex flex-wrap gap-2">
          {categories.slice(0, 2).map((cat) => (
            <a href={`/${cat.slug}`} class="bg-white/20 backdrop-blur-md border border-white/20 text-white text-[10px] font-bold px-2 py-1 rounded">
              {cat.name}
            </a>
          ))}
        </div>
      )}
    </div>
    <div class="flex flex-col flex-1 py-1">
      <h3 class="text-lg sm:text-xl md:text-2xl font-bold text-slate-900 dark:text-white mb-2 sm:mb-3 leading-tight group-hover:text-primary transition-colors">
        <a href={`/${slug}`}>{title}</a>
      </h3>
      <p class="text-text-muted dark:text-gray-400 text-sm sm:text-[15px] leading-relaxed mb-4 sm:mb-6 line-clamp-2 md:line-clamp-3" set:html={excerpt} />
      <div class="mt-auto flex items-center justify-between">
        <div class="flex items-center gap-2 text-text-muted text-xs font-medium">
          <span class="material-symbols-outlined text-[16px]">calendar_today</span>
          {formattedDate}
        </div>
        <a href={`/${slug}`} class="text-primary text-sm font-semibold flex items-center gap-1 group-hover:translate-x-1 transition-transform">
          Leer <span class="hidden sm:inline">artículo</span> <span class="material-symbols-outlined text-[16px]">chevron_right</span>
        </a>
      </div>
    </div>
  </article>
)}

{layout === 'featured' && (
  <article class="relative w-full aspect-[4/5] sm:aspect-video lg:h-[600px] rounded-2xl overflow-hidden shadow-soft group cursor-pointer">
    <a href={`/${slug}`} class="block absolute inset-0">
      <div
        class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
        style={`background-image: url('${postImage.url}');`}
      ></div>
      <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
      <div class="absolute bottom-0 left-0 p-5 sm:p-10 w-full max-w-4xl">
        {categories && categories.length > 0 && (
          <span class="inline-block px-3 py-1 mb-3 sm:mb-4 text-[10px] sm:text-xs font-bold text-white uppercase tracking-wider bg-primary rounded-md shadow-sm">
            {categories[0].name}
          </span>
        )}
        <h2 class="text-2xl sm:text-4xl md:text-5xl font-bold text-white mb-3 sm:mb-4 leading-snug sm:leading-tight">
          {title}
        </h2>
        <div class="flex items-center gap-3 text-gray-300 text-xs sm:text-sm font-medium">
          <span>Redacción</span>
          <span class="size-1 rounded-full bg-gray-400"></span>
          <span>{shortDate}</span>
        </div>
      </div>
    </a>
  </article>
)}
