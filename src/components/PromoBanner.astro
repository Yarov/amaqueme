---
/**
 * Componente de banner promocional para la p√°gina de inicio
 */
import { getBanner } from "../lib/wordpress.js";

const banner = await getBanner();
const link = banner?.bannerFields?.url || "";
const bannerImageUrl = banner?.bannerFields?.image?.node?.sourceUrl || "";
---

{bannerImageUrl && (
  <div class="container mx-auto my-8">
    <div class="flex justify-center">
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="block hover:opacity-90 transition-opacity"
      >
        <img
          src={bannerImageUrl}
          alt="Banner promocional"
          class="max-w-full h-auto rounded shadow-md"
        />
      </a>
    </div>
  </div>
)}
