---
import Layout from "../layouts/Layout.astro";
import PostCard from "../components/PostCard.astro";
import CategoryList from "../components/CategoryList.astro";
import SEO from "../components/seo/SEO.astro";
import Pagination from "../components/Pagination.astro";
import { getAllPosts } from "../lib/wordpress";
import { getPostImage } from '../utils/getPostImage';

// Obtener el número de página de la URL
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const postsPerPage = 12;

// Obtener todos los posts con paginación
const { posts, pagination } = await getAllPosts(page, postsPerPage);

// Título de la página
const pageTitle = "Todas las Noticias";
---

<Layout title={`${pageTitle} - Amaqueme`}>
  <SEO
    title={`${pageTitle} - Amaqueme`}
    description="Explora todas nuestras noticias y artículos en un solo lugar."
    type="website"
  />

  <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    <!-- Header Section -->
    <section class="mb-8 sm:mb-12">
      <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 dark:text-white tracking-tight mb-2">{pageTitle}</h1>
      <p class="text-text-muted dark:text-gray-400">Explora todas nuestras noticias y artículos más recientes.</p>
    </section>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
    <!-- Main Content - Posts Grid -->
    <div class="lg:col-span-8">
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {posts.map((post) => (
            <article class="bg-white dark:bg-surface-dark rounded-2xl overflow-hidden shadow-card hover:shadow-lg transition-all duration-300 h-full flex flex-col group border border-gray-100 dark:border-transparent">
              <div class="relative aspect-[4/3] overflow-hidden">
                <div
                  class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110"
                  style={`background-image: url('${getPostImage(post).url}');`}
                ></div>
                {post.categories?.nodes && post.categories.nodes.length > 0 && (
                  <div class="absolute top-3 left-3">
                    <a
                      href={`/${post.categories.nodes[0].slug}`}
                      class="bg-white/20 backdrop-blur-md border border-white/20 text-white text-[10px] font-bold px-2 py-1 rounded uppercase tracking-wide"
                    >
                      {post.categories.nodes[0].name}
                    </a>
                  </div>
                )}
              </div>
              <div class="p-4 sm:p-5 flex flex-col flex-1">
                <span class="text-xs font-semibold text-slate-500 dark:text-gray-400 uppercase mb-2">
                  {post.categories?.nodes?.[0]?.name || 'General'}
                </span>
                <h3 class="text-lg font-bold text-slate-900 dark:text-white leading-tight mb-3 group-hover:text-primary transition-colors line-clamp-2 flex-grow">
                  <a href={`/${post.slug}`}>{post.title}</a>
                </h3>
                <p class="text-text-muted dark:text-gray-400 text-sm line-clamp-2 mb-4" set:html={post.excerpt} />
                <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-100 dark:border-gray-700">
                  <div class="flex items-center gap-2 text-text-muted text-xs font-medium">
                    <span class="material-symbols-outlined text-[16px]">calendar_today</span>
                    <time datetime={post.date}>
                      {new Date(post.date).toLocaleDateString('es-MX', {
                        month: 'short',
                        day: 'numeric',
                      })}
                    </time>
                  </div>
                  <a href={`/${post.slug}`} class="text-primary text-sm font-semibold flex items-center gap-1 group-hover:translate-x-1 transition-transform">
                    Leer <span class="material-symbols-outlined text-[16px]">chevron_right</span>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>

        <!-- Paginación -->
        {pagination && pagination.totalPages > 1 && (
          <div class="mt-12 mb-8">
            <Pagination
              currentPage={pagination.currentPage}
              totalPages={pagination.totalPages}
              baseUrl="/noticias"
            />
          </div>
        )}
      ) : (
        <div class="bg-white dark:bg-surface-dark rounded-2xl p-8 text-center border border-gray-100 dark:border-transparent">
          <h3 class="text-xl font-semibold text-slate-700 dark:text-gray-200 mb-2">No hay artículos disponibles</h3>
          <p class="text-text-muted dark:text-gray-400">Vuelve pronto para ver nuevo contenido.</p>
        </div>
      )}
    </div>

    <!-- Sidebar -->
    <aside class="lg:col-span-4">
      <div class="sticky top-24 space-y-8">
        <!-- Categories Widget -->
        <div class="bg-white dark:bg-surface-dark rounded-2xl p-6 shadow-card border border-gray-100 dark:border-transparent">
          <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-6">Temas populares</h3>
          <CategoryList />
        </div>
      </div>
    </aside>
  </div>
</div>
</Layout>
